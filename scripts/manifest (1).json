{
  "name": "Hugging Face Hub Uploader",
  "version": "1.0.0",
  "title": "Hugging Face Hub Uploader Plugin",
  "description": "Upload checkpoint files to Hugging Face Hub",
  "main": "sdwebui-hfbackup.py",
  "tab": "Hugging Face Hub Uploader",
  "settings": {
    "hf_write_key": {
      "label": "Hugging Face Write Key",
      "type": "text",
      "default": ""
    }
  },
  "ui": {
    "components": [
      {
        "type": "textbox",
        "label": "Hugging Face Username",
        "id": "hf-username"
      },
      {
        "type": "textbox",
        "label": "Hugging Face Repository",
        "id": "hf-repo"
      },
      {
        "type": "filepicker",
        "label": "Select Directory",
        "id": "dir-picker",
        "multiple": false,
        "type": "directory"
      },
      {
        "type": "filepicker",
        "label": "Checkpoint Files",
        "id": "ckpt-files",
        "multiple": true
      },
      {
        "type": "radio",
        "label": "File Type",
        "id": "file-type-picker",
        "choices": ["zip", "pt", "ckpt", "safetensors", "bin"]
      },
      {
        "type": "textbox",
        "label": "Pull Request Message",
        "id": "pr-message"
      },
      {
        "type": "button",
        "label": "Upload to Hugging Face Hub",
        "id": "upload-btn"
      }
    ]
  },
  "api_callbacks": [
    {
      "function": "upload_ckpts",
      "inputs": [
        "hf-username",
        "hf-repo",
        "write-key",
        "dir-picker",
        "ckpt-files",
        "file-type-picker",
        "pr-message"
      ],
      "outputs": ["response"]
    }
  ]
}